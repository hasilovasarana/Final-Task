@model IEnumerable<crm_system.Models.Product_Management>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-title clearfix mt-5">
    <h3 class="float-left "><strong>Product List</strong></h3>
    <span class="float-left">Office-management</span>
    <!-- BEGIN ADD BUTTON -->
    <a role="button" href="/Product_Management/Create" class="btn btn-md float-right d-md-block d-lg-block d-sm-none d-none" id="btn-add">Add Product<i class="fa fa-plus" id="add-icon"></i></a>
    <a role="button" href="/Product_Management/Create" class="btn btn-lg btn-block d-sm-block d-md-none d-lg-none" id="btn-add">Add Product<i class="fa fa-plus" id="add-icon"></i></a>
    <!-- BEGIN ADD BUTTON -->
</div>


<div class="table table-responsive d-sm-table d-md-table d-lg-table d-xl-table rounded mt-5">
    <table class="table table-bordered table-hover" id="table">
        <thead id="table-title">
            <tr>
                <th colspan="7"><i class="fa fa-briefcase" id="table-icon"></i>Product List</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>
                    <p>Serial</p>
                </th>
                <th>
                    <p>Product Name</p>
                </th>
                <th>
                    <p>Product Unit</p>
                </th>
                <th>
                    <p>Buying Price</p>
                </th>
                <th>
                    <p>Selling Price</p>
                </th>
                <th>
                    <p>Product Category</p>
                </th>
                <th>
                    <p>Action</p>
                </th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.product_manage_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product_unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.buying_price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.selling_price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product_Category.prod_category_name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.product_manage_id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.product_manage_id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.product_manage_id })
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>
