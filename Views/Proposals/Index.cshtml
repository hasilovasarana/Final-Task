@model IEnumerable<crm_system.Models.Proposal>

@{
    ViewBag.Title = "Proposals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-title clearfix mt-3">
    <h3 class="float-left "><strong>Proposal List</strong></h3>   
</div>


<div class="table table-responsive d-sm-table d-md-table d-lg-table d-xl-table rounded mt-5">
    <table class="table table-bordered table-hover" id="table">
        <thead id="table-title">
            <tr>
                <th colspan="5"><i class="fa fa-briefcase" id="table-icon"></i>Proposal List</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>
                    <p>Send To</p>
                </th>
                <th>
                    <p>Document</p>
                </th>
                <th>
                    <p>Send Time</p>
                </th>
                <th>
                    <p>Detail</p>
                </th>

                <th>
                    <p>Action</p>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.customer_full_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.attachment_file)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.propposal_date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.proposal_detail)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.proposal_id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.proposal_id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.proposal_id })
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
