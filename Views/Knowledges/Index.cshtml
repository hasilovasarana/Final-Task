@model IEnumerable<crm_system.Models.Knowledge>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-title clearfix mt-2">
    <h3 class="float-left "><strong>Knowledges List</strong></h3>
</div>

<div class="table table-responsive d-sm-table d-md-table d-lg-table d-xl-table rounded mt-5">
    <table class="table table-bordered table-hover" id="table">
        <thead id="table-title">
            <tr>
                <th colspan="5"><i class="fa fa-briefcase" id="table-icon"></i>Knowledge List</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>
                    <p>Category Title</p>
                </th>
                <th>
                    <p>Title</p>
                </th>
                <th>
                    <p>Detail</p>
                </th>
                <th>
                    <p>Date</p>
                </th>
                <th>
                    <p>Action</p>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Blog_Category.blog_title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.knowledge_title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.knowledge_detail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.knowledge_date)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.knowledge_id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.knowledge_id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.knowledge_id })
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

