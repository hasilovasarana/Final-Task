@model IEnumerable<crm_system.Models.Note>

@{
    ViewBag.Title = "Notes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-title clearfix mt-5">
    <h3 class="float-left "><strong>Notes List</strong></h3>  
</div>


<div class="table table-responsive d-sm-table d-md-table d-lg-table d-xl-table rounded mt-5">
    <table class="table table-bordered table-hover" id="table">
        <thead id="table-title">
            <tr>
                <th colspan="7"><i class="fa fa-briefcase" id="table-icon"></i>Notes List</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>
                    <p>Note Title</p>
                </th>
                <th>
                    <p>Note Detail</p>
                </th>
                <th>
                    <p>Note date</p>
                </th>
                <th>
                    <p>Action</p>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.note_title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.note_detail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.note_date)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.note_id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.note_id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.note_id })
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>
