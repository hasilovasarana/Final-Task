@model crm_system.Models.Admin

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Customer</title>
    <meta charset="UTF-8">
    <meta http-equiv="x-ua-compatible" content="ie-edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--::::::::::::::::::::: BEGIN CSS LINKS :::::::::::::::::-->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Karma:300,400,500,600,700" rel="stylesheet">
    <link rel="stylesheet" href="~/css/reset.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
    <!-- :::::::::::::::::::END CSS LINKS::::::::::::::::::::::::: -->
</head>
<body style="background-image:url('/images/change_psw_bg.jpg');color:white;background-position: top left;background-repeat: no-repeat;">
    <section id="change_psw_card" style="width: 360px;height:260px; position: absolute;top:calc(50% - 130px);left:calc(50% - 180px)">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-wrap">
                        <h1>Change password</h1>
                        <form role="form" action="/Login/Change_Password" method="post" id="change_psw" autocomplete="off">
                            <div class="form-group">
                                <label for="old_psw" class="sr-only">Old Password</label>
                                <input type="password" name="admin_password" id="old_psw" class="form-control" placeholder="Old Password">
                            </div>
                            <div class="form-group">
                                <label for="new_key" class="sr-only">New Password</label>
                                <input type="password" name="admin_new_psw" id="new_key" class="form-control" placeholder="New Password">
                            </div>
                            <div class="form-group">
                                <label for="confirm_key" class="sr-only">New Password</label>
                                <input type="password" name="admin_confirm_psw" id="confirm_key" class="form-control" placeholder="Confirm Password">
                            </div>

                            <input type="submit" id="btn-change" class="btn btn-custom btn-lg btn-block btn-success" value="Change">
                        </form>

                    </div>
                </div> <!-- /.col-xs-12 -->
            </div> <!-- /.row -->
        </div> <!-- /.container -->
    </section>
    <!-- :::::::::::::::::::::::::SCRIPT LINk:::::::::::::::::::::::::::::::::::::::::::::: -->
    <script src="~/js/tether.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>
