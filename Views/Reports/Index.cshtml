@model IEnumerable<crm_system.Models.Report>

@{
    ViewBag.Title = "Supply Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-title clearfix mt-5">
    <h3 class="float-left "><strong>Supply Reports</strong></h3>
</div>


<div class="table table-responsive d-sm-table d-md-table d-lg-table d-xl-table rounded mt-5">
    <table class="table table-bordered table-hover" id="table">
        <thead id="table-title">
            <tr>
                <th colspan="8">
                    <i class="fa fa-briefcase" id="table-icon"></i>Supply Reports
                    <div class="btn-group float-right" role="group" aria-label="button_group">
                        <button type="button" class="btn btn-sm btn-secondary" onclick="window.print()">Print</button>
                        <button type="button" class="btn btn-sm btn-secondary" onclick="pdf()">PDF</button>
                        <button type="button" class="btn btn-sm btn-secondary" onclick="csv()">CSV</button>
                    </div>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>
                    <p>#</p>
                </th>
                <th>
                    <p>Supplier Name</p>
                </th>
                <th>
                    <p>Item Name</p>
                </th>
                <th>
                    <p>Quantity</p>
                </th>
                <th>
                    <p>Rate</p>
                </th>
                <th>
                    <p>Amount</p>
                </th>
                <th>
                    <p>Total amount</p>
                </th>
                <th>
                    <p>Action</p>
                </th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.report_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manage_Supplier.supplier_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supply_Management.item_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supply_Management.quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supply_Management.rate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supply_Management.amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supply_Management.total_amount)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.report_id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.report_id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.report_id })
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>
