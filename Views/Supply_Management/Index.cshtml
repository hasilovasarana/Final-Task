@model IEnumerable<crm_system.Models.Supply_Management>

@{
    ViewBag.Title = "Supply Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-title clearfix mt-5">
    <h3 class="float-left "><strong>Supply Management</strong></h3>    
</div>


<div class="table table-responsive d-sm-table d-md-table d-lg-table d-xl-table rounded mt-5">
    <table class="table table-bordered table-hover" id="table">
        <thead id="table-title">
            <tr>
                <th colspan="7"><i class="fa fa-briefcase" id="table-icon"></i>Balance List</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>
                    <p>Supplier Name</p>
                </th>
                <th>
                    <p>Rate</p>
                </th>
                <th>
                    <p>Item Name</p>
                </th>
                <th>
                    <p>Quantity</p>
                </th>
                <th>
                    <p>Model Amount</p>
                </th>
                <th>
                    <p>Total Amount</p>
                </th>
                <th>
                    <p>Action</p>
                </th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Manage_Supplier.supplier_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.item_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.total_amount)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.supply_manage_id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.supply_manage_id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.supply_manage_id })
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>
